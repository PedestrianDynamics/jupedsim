<JuPedSim xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" project="JPS-Project" version="0.8">


    <seed>1586</seed>
    <max_sim_time>100</max_sim_time>
    <geometry>../geometry.xml</geometry>
    <show_statistics>false</show_statistics>

    <trajectories format="plain" fps="16">
        <file location="traj_Test4.txt"/>
    </trajectories>

     <logfile>log</logfile>
     <num_threads>8</num_threads>


     <traffic_constraints>
          <doors>
               <door state="open" trans_id="0" />
          </doors>
     </traffic_constraints>

     <routing>
          <goals>
               <goal caption="goal 1" final="false" id="0">
                    <polygon>
                         <vertex px="4.75" py="-6.0" />
                         <vertex px="5.25" py="-6.0" />
                         <vertex px="5.25" py="-6.5" />
                         <vertex px="4.75" py="-6.5" />
                         <vertex px="4.75" py="-6.0" />
                    </polygon>
               </goal>
          </goals>
     </routing>
     <agents operational_model_id="3">
          <agents_distribution>
               <group agent_parameter_id="1" goal_id="-1" group_id="1"  number="40" pre_movement_mean="1" pre_movement_sigma="0" risk_tolerance_mean="1" risk_tolerance_sigma="0.1" room_id="0"  subroom_id="0" router_id="arange(1,7)"/>
          </agents_distribution>
     </agents>
     <operational_models>


          <model description="Tordeux2015" operational_model_id="3">
               <model_parameters>
                    <stepsize>0.1</stepsize>
                    <periodic>0</periodic>
                    <exit_crossing_strategy>8</exit_crossing_strategy>
                    <linkedcells cell_size="30" enabled="true" />
                    <force_ped D="0.1" a="5" />
                    <force_wall D="0.02" a="5" />
               </model_parameters>
               <agent_parameters agent_parameter_id="1">
                    <v0 mu="1.34" sigma="0.0" />
                    <bmax mu="0.15" sigma="0.0" />
                    <bmin mu="0.15" sigma="0.0" />
                    <amin mu="0.15" sigma="0.0" />
                    <tau mu="0.5" sigma="0.0" />
                    <atau mu="0." sigma="0.0" />
                    <T mu="1" sigma="0.0" />
               </agent_parameters>
          </model>
     </operational_models>

     <route_choice_models>
       <router router_id="1" description="local_shortest">
         <parameters>
           <!-- <navigation_lines file="../routing.xml" /> -->
         </parameters>
       </router>

       <router router_id="2" description="global_shortest">
         <parameters>
           <!-- <navigation_lines file="../routing.xml" /> -->
         </parameters>
       </router>

       <router router_id="3" description="quickest"> <!-- global quickest -->
         <parameters>
           <!-- <navigation_lines file="../routing.xml" /> -->
         </parameters>
       </router>


       <router router_id="4" description="ff_global_shortest"/> <!-- like global_shortest, without HLines -->
       <router router_id="5" description="ff_local_shortest"/> <!-- like local_shortest, without HLines -->
       <router router_id="6" description="ff_quickest"/> <!-- like global quickest -->

       <!-- not implemented -->
       <router router_id="7" description="local_quickest">
         <parameters>
           <!-- <navigation_lines file="../routing.xml" /> -->
         </parameters>
       </router>
     </route_choice_models>
</JuPedSim>
